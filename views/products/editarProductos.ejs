<!DOCTYPE html>
<html lang="en">
    <%-  include('../partials/head.ejs', { css_files: ["adminEdicionProdu"] })%>


<body>
   
     <%- include('../partials/header.ejs') %> 

    <main>

        <h2>Editar Producto: <%= ProductoElegido.name %></h2>

        <form action="/products/<%= ProductoElegido.id %>?_method=PUT" method="post" enctype="multipart/form-data" >

            <div class="contenedor">
                
                
                <div class="contenedor-nombreProdu">
                    <label>Nombre del Producto: <%= ProductoElegido.name %>  </label>
                    <input type="text" name="nombre" id="" placeholder="" class="nombreProducto inputstyle" value="<%= ProductoElegido.name %>"> 
                </div>
               
                <div class="contenedor-descripcion">
                    <textarea name="descripcion" id="" cols="30" rows="10" placeholder="Descripcion del producto" class="descripcion inputstyle"><%= ProductoElegido.description %></textarea>
                </div>
                
                <div class="contenedor-img">
                    <label>Imagen Principal del Producto:</label>
                    <input type="file" name="file_img" id="" placeholder="Sube la imagen" class="img">
                </div>

                <div class="contenedor-img">
                    <label>Imagenes Secundarias del Producto:</label>
                    <input type="file" name="files_img" id="" placeholder="Sube las imagenes" class="img" multiple > 
                </div>

                <div class="contenedor-categorias">
                    <label class=" sub-contenedor">Categorias:</label>
                    <select name="category" id="" class="categorias"> Categorias
                       <% for(let i = 0; i < category.length; i++) { %>
                        <% if(category[i].id == ProductoElegido.category_id) { %>
                            <option value="<%= category[i].id %>" selected>
                                <%= category[i].name  %>
                        </option>
                            <% }else { %>
                                <option value="<%= category[i].id %>">
                                <%= category[i].name %>
                            </option>
                            <% } %>
                            <% } %>
                    </select>
                </div>

                <div class="contenedor-prendas">
                    <label class="categoria-prenda">Tipos de prendas:</label>
                    <select name="type" id="" class="type prenda"> type
                        <% for(let i = 0; i < Type.length; i++) { %>
                         <% if(Type[i].id == ProductoElegido.type_id) { %>
                             <option value="<%= Type[i].id %>" selected>
                                 <%= Type[i].name  %>
                         </option>
                             <% }else { %>
                                 <option value="<%= Type[i].id %>">
                                 <%= Type[i].name %>
                             </option>
                             <% } %>
                             <% } %>
                </div>

                <div class="contenedor-talles">
                    <label class="categoria-talles">Talles:</label>
                    <select name="waist" id="" class="waist talles"> waist
                        <% for(let i = 0; i < Waist.length; i++) { %>
                         <% if(Waist[i].id == ProductoElegido.waist_id) { %>
                             <option value="<%= Waist[i].id %>" selected>
                                 <%= Waist[i].name  %>
                         </option>
                             <% }else { %>
                                 <option value="<%= Waist[i].id %>">
                                 <%= Waist[i].name %>
                             </option>
                             <% } %>
                             <% } %>
                </div>

                <div class="contenedor-precio">
                    <label>Precio:</label>
                    <input type="text" name="precio" id="" placeholder="$" class="inputstyle" value="<%= ProductoElegido.price %>"> 
                </div>

                <div  class="contenedor-btn" >
                    <button class="btn-crear" type="submit">GUARDAR CAMBIOS</button>
<!--                     <button class="btn-cancelar" type="submit">CANCELAR</button>
 -->            </div>
        </div>
        </form>
    </main>


      <%-  include('../partials/footer.ejs')   %>  

</body>
</html>