<header class="flex-col">

    <section class="header-header flex-row">

        <div class="contenedor-hamburguesa">
            <a href="#" class="menu-hamburguesa-boton" id="hamburguesa-boton">
                <i class="fas fa-bars hamburg"></i>
            </a>
            <div class="menu-overlay"></div>
            <div class="menu-options">
                <ul id="menu-ul">
                    <li class="category-search">Hombre</li>
                    <li class="category-search">Mujer</li>
                    <li class="category-search">Niño</li>
                    <li class="category-search">Lentes</li>
                    <li class="category-search">Gorra</li>
                    <li>Todos los productos</li>
                    <li>Iniciar sesión o registrarse</li>
                </ul>
            </div>
        </div>

        <div class="contenedor-logo">
            <a href="/products">
                <img src="/image/logo-culmen.png" alt="Logo Culmen" class="logo">
            </a>
        </div>

        <nav class="nav-bar flex-row">
            <div class="contenedor-buscador">

                <form action="/products/listarProducts" method="get" class="form_buscador">
                    <input type="text" name="buscador_home" id="buscador_home" class="buscador_home" placeholder="Busque su producto...">
                    <button type="submit" class="btn_buscador">
                           <i class="fas fa-search icon_header"></i>
                    </button>
                </form>
            </div>
            
            <div class="contenedor-carrito">
                <a href="/carrito">
                    <i class="fas fa-shopping-cart icon_header" alt="Carrito de Compra"></i>
                </a>
            </div>   
            
            <% if( locals.isLogged ) { %>
                <div class="contenedor-user">
                    <img src="/users/<%= userLogged.avatar %>" alt="" class="header_image_user">
                    <p> Hi <%= userLogged.name %> </p>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/user/profile">My profile</a>
                        <li><hr class="dropdown-divider"></li>
                        <a class="dropdown-item" href="/user/logout">Logout</a>
                    </ul>
                </div>
            <% } else {  %>
                <div class="contenedor-user">
                    
                        <a href="/user/login">   
                            <i class="fas fa-user icon_header" alt="Iniciar Sesion"> </i>
                        </a>
                    <p class="header_is_register"> </p>
                </div>
             <% } %>
        </nav>
    </section>

    <nav class="header_container_items">
        <ul>
                <li>Hombre</li>
                <li>Mujer</li>
                <li>Niño</li>
                <li>Accesorios</li>
        </ul>
        </nav>


</header>

<script>
 
    const menuBtn = document.querySelector('.contenedor-hamburguesa');
    const menuOverlay = document.querySelector('.menu-overlay');
    const menuOptions = document.querySelector('.menu-options');
    
    menuBtn.addEventListener('click', () => {
        /* menuOptions.style.display = 'block'; */
        menuOverlay.classList.toggle('active');
        menuOptions.classList.toggle('active');
    });

    // BUSCADOR POR LI 
    const categorySearchItems = document.querySelectorAll('.category-search');

    categorySearchItems.forEach(item => {
        item.addEventListener('click', (e) => {
            console.log(e.target.textContent)
            const searchText = e.target.textContent;
            window.location.href = `/products/listarProducts?buscador_home=${searchText}`;

        })
    })



</script>